  <script>
    function tampilkanTips() {
      const tips = [
        "Luangkan waktu 10 menit sehari untuk mendengarkan lagu favoritmu.",
        "Tonton film ringan saat penat agar pikiran rileks.",
        "Bermain game sesekali bisa membantu melepas stres.",
        "Coba kombinasikan hobi-mu dengan kegiatan belajar agar lebih menyenangkan!"
      ];
      const randomIndex = Math.floor(Math.random() * tips.length);
      document.getElementById("output").textContent = tips[randomIndex];
    }
  </script>

